<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.francony.romain.outerspacemanager.helpers.Helpers" />

        <import type="android.view.View" />

        <variable
            name="spaceyardFragment"
            type="com.francony.romain.outerspacemanager.fragment.SpaceyardFragment" />

        <variable
            name="willBuild"
            type="Boolean" />

        <variable
            name="ship"
            type="com.francony.romain.outerspacemanager.model.Ship" />
    </data>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ship_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{ship.name}"
                    android:theme="@style/AppTheme.H2" />

                <TextView
                    android:id="@+id/ship_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{ ship.amount > 1 || willBuild ? String.format(@string/item_quantity, ship.amount) : null}"
                    android:theme="@style/AppTheme.TitleSubtext" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <!-- Life -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_life" />

                    <TextView
                        android:id="@+id/ship_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{ship.getLife().toString()}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Shield -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_shield" />

                    <TextView
                        android:id="@+id/ship_shield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{ship.getShield().toString()}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="100">
                <!-- Attack -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_attack" />

                    <TextView
                        android:id="@+id/ship_attack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{ship.getMinAttack().toString() + ` - ` + ship.getMaxAttack().toString()}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_speed" />

                    <TextView
                        android:id="@+id/ship_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{ship.getSpeed().toString()}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:weightSum="99">
                <!-- Gas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_gas" />

                    <TextView
                        android:id="@+id/ship_gas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{String.valueOf(ship.getGasCost() * ship.amount)}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Mineral -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mineral" />

                    <TextView
                        android:id="@+id/ship_mineral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{String.valueOf(ship.getMineralCost() * ship.amount)}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:gravity="center_vertical|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/ship_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@{Helpers.secondToHumanReadableTime(ship.getTimeToBuild() )}"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/ship_build_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/action.build"
                    android:visibility="@{willBuild ? View.GONE : View.VISIBLE}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:paddingBottom="18dp"
                android:paddingTop="16dp"
                android:visibility="@{willBuild ? View.VISIBLE : View.GONE}">

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/ship_quantity_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-8dp"
                    android:layout_weight="1"
                    app:isb_indicator_color="@color/colorAccent"
                    app:isb_indicator_type="circular_bubble"
                    app:isb_max="100"
                    app:isb_min="1"
                    app:isb_progress="1"
                    app:isb_show_indicator="true"
                    app:isb_thumb_color="@color/colorAccent"
                    app:isb_track_progress_bar_color="@color/colorAccent" />

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/colorAccent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> spaceyardFragment.startConstruction(ship)}"
                    android:outlineProvider="bounds"
                    android:src="@drawable/ic_check" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>